{
  "manifest_version": 3,
  "name": "Red Ink Browser Extension",
  "version": "1.0",
  "description": "Sends the selected text to the user's Red Ink Outlook or Word add-in running for being processed and, as the case may be, returned.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "background": {
    "service_worker": "redink_background.js",
    "scripts": ["redink_background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "lil@vischer.com"
    }
  },
  "icons": {
    "16": "redink_icon16.png",
    "64": "redink_icon64.png",
    "128": "redink_icon128.png"
  }
}
